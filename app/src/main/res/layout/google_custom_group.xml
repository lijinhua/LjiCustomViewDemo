<com.example.lijinhua.ljicustomviewdemo.view.google.GoogleCustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 将第一个视图放到左边-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical|center_horizontal"
        android:background="@color/colorAccent"
        android:text="l1"
        app:layout_position="left" />

    <!-- 将第二个视图叠加到左边-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical|center_horizontal"
        android:background="@android:color/black"
        android:text="l2"
        app:layout_position="left" />

    <!-- 将此视图放到右边. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical|center_horizontal"
        android:background="@color/colorAccent"
        android:text="r1"
        app:layout_position="right" />

    <!-- 默认情况下，视图放到布局中间，使用重心垂直填充 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical|center_horizontal"
        android:background="@color/seafoam"
        android:text="fill-vert" />

    <!-- 默认情况下，视图放到布局中间，使用重心水平填充 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:background="@color/seafoam"
        android:text="fill-horiz" />

    <!-- 默认情况下，视图放到布局中间，使用重心左上角填充 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:background="@color/colorPrimary"
        android:text="top-left" />

    <!-- 默认情况下，视图放到布局中间，使用重心重心填充 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="center" />

    <!-- 默认情况下，视图放到布局中间，使用重心右下角填充 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@color/colorPrimary"
        android:text="bottom-right" />

</com.example.lijinhua.ljicustomviewdemo.view.google.GoogleCustomLayout>