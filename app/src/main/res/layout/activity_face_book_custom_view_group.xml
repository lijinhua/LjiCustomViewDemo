<?xml version="1.0" encoding="utf-8"?>
<com.example.lijinhua.ljicustomviewdemo.view.ProfilePhotoLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mProfilePhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_home" />

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mTitle" />

    <TextView
        android:id="@+id/mSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mSubtitle" />

    <ImageView
        android:id="@+id/mMenu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher" />
</com.example.lijinhua.ljicustomviewdemo.view.ProfilePhotoLayout>
